{{!< default}}

<header id="header" class="header{{#if @blog.cover}} has-cover{{/if}}">
	<div class="inner">
		<a class="header-title margin-top-minus" href="{{@blog.url}}">
			<img src="{{@blog.logo}}" width="70px" height="30px" alt="Logo" />
			<h1 class="header-name">{{@blog.title}}</h1>
			{{#if @blog.description}}
				<span class="header-description">{{@blog.description}}</span>
			{{/if}}
		</a>
		{{#get "tags" limit="5" include="count.posts" order="count.posts desc" }}
			<div class="post-footer">
			<div class="post-tags post-tags-top" style="max-width: 100%;">
					{{#foreach tags}}
						<a href="/tag/{{slug}}" class="js-ajax-link js-tag-index" >#{{name}}</a>
					{{/foreach}}
			</div>
		</div>
		{{/get}}
	</div>
	{{#if @blog.cover}}
		<div class="header-cover" style="background-image: url({{@blog.cover}})"></div>
	{{/if}}
</header>

<div id="post-index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>
	{{#get "tags" limit="all" include="count.posts" order="count.posts asc" }}
		<footer class="post-footer">
		<div class="post-tags" style="max-width: 100%;">
			{{#foreach tags}}
				<a href="/tag/{{slug}}" class="js-ajax-link js-tag-index" >{{name}}</a>
			{{/foreach}}
		</div>
	</footer>
	{{/get}}
</div>
